<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xunmaw.job.mapper.MenuMapper">

    <resultMap type="com.xunmaw.job.entity.Menu" id="Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="icon" property="icon"/>
        <result column="href" property="href"/>
        <result column="perms" property="perms"/>
        <result column="parent_id" property="parentId"/>
        <result column="type" property="type"/>
    </resultMap>

    <insert id="create" keyProperty="id" useGeneratedKeys="true" parameterType="menu">
		insert into tb_menu(
			name,
			icon,
			href,
			perms,
			parent_id,
			type
		)values(
			#{name},
			#{icon},
			#{href},
			#{perms},
			#{parentId},
			#{type}
		)
	</insert>

    <delete id="delete">
		delete from tb_menu where id = #{id}
	</delete>

    <update id="update">
        update tb_menu set
        <if test="name != null and name != ''">name = #{name}</if>
        <if test="icon != null and icon != ''">,icon = #{icon}</if>
        <if test="href != null and href != ''">,href = #{href}</if>
        <if test="perms != null and perms != ''">,perms = #{perms}</if>
        <if test="parentId != null">,parent_id = #{parentId}</if>
        <if test="type != null">,type = #{type}</if>
        where id = #{id}
    </update>

    <select id="query" resultMap="Menu">
        select * from tb_menu
        <include refid="MenuFindCriteria"/>
    </select>

    <select id="count" resultType="int">
        select count(1) from tb_menu
        <include refid="MenuFindCriteria"/>
    </select>

    <select id="detail" resultMap="Menu">
		select * from tb_menu where id = #{id}
	</select>

    <sql id="MenuFindCriteria">
        <where>
            <if test="id != null">and id = #{id}</if>
            <if test="name != null and name != ''">and name = #{name}</if>
            <if test="icon != null and icon != ''">and icon = #{icon}</if>
            <if test="href != null and href != ''">and href = #{href}</if>
            <if test="perms != null and perms != ''">and perms = #{perms}</if>
            <if test="parentId != null">and parent_id = #{parentId}</if>
            <if test="type != null">and type = #{type}</if>
        </where>
    </sql>

</mapper>
