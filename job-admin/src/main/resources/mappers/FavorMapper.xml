<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xunmaw.job.mapper.FavorMapper">

    <resultMap type="com.xunmaw.job.entity.Favor" id="Favor">
        <id column="id" property="id"/>
        <result column="company_id" property="companyId"/>
        <result column="post_id" property="postId"/>
        <result column="student_id" property="studentId"/>
        <result column="favor_date" property="favorDate"/>
    </resultMap>

    <insert id="create" keyProperty="id" useGeneratedKeys="true" parameterType="favor">
		insert into tb_favor(
			company_id,
			post_id,
			student_id,
			favor_date
		)values(
			#{companyId},
			#{postId},
			#{studentId},
			#{favorDate}
		)
	</insert>

    <select id="query" resultMap="Favor">
        select * from tb_favor
        <include refid="FavorFindCriteria"/>
    </select>

    <select id="count" resultType="int">
        select count(1) from tb_favor
        <include refid="FavorFindCriteria"/>
    </select>

    <select id="detail" resultMap="Favor">
		select * from tb_favor where id = #{id}
	</select>

    <delete id="delete">
		delete from tb_favor where id = #{id}
	</delete>

    <update id="update">
        update tb_favor set
        <if test="companyId != null">company_id = #{companyId},</if>
        <if test="postId != null">post_id = #{postId},</if>
        <if test="studentId != null">student_id = #{studentId},</if>
        <if test="favorDate != null">favor_date = #{favorDate}</if>
        where id = #{id}
    </update>

    <sql id="FavorFindCriteria">
        <where>
            <if test="id != null">and id = #{id}</if>
            <if test="companyId != null">and company_id = #{companyId}</if>
            <if test="postId != null">and post_id = #{postId}</if>
            <if test="studentId != null">and student_id = #{studentId}</if>
        </where>
    </sql>

</mapper>
